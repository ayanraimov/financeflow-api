# .env.example
# Database (Docker)
POSTGRES_DB=financeflow
POSTGRES_USER=financeflow
POSTGRES_PASSWORD=change_me_in_dev

# Database (App)
DATABASE_URL="postgresql://user:password@host:5432/financeflow?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-256-bits-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-256-bits-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis
REDIS_URL="redis://default:password@host:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_in_dev

# App
PORT=3000
NODE_ENV="production"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ==================== CORS ====================
CORS_ORIGIN="https://your-frontend.vercel.app,https://your-app.netlify.app"
